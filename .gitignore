# create (or overwrite) .gitignore
cat > .gitignore <<'EOF'
# macOS
.DS_Store
**/.DS_Store

# Python
.venv/
__pycache__/
*.pyc
*.pyo
*.pyd
*.egg-info/
.eggs/
build/
dist/

# Jupyter
.ipynb_checkpoints/
**/.ipynb_checkpoints/

# Node / Vite
node_modules/
**/node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
.vite/

# Frontend outputs
ff_react/dist/

# Env / local config
.env
.env.*
*.local

# Editors/OS
.vscode/
.idea/
Thumbs.db
EOF

git add .gitignore
git commit -m "chore: add .gitignore"
